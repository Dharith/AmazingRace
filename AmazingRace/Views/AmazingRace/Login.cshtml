    <style>
        .login_btn {
            background-color: #333;
            font-family: 'Patua One',cursive;
            color: #ffcc00;
            border: 0px;
            outline: none;
            padding: 5px;
            border-radius: 50px;
            margin-top: 10px;
            margin-bottom: 15px;
        }

        .login_div {
            padding-top: 75px;
            text-align: center;
        }

            .login_div > a {
                color: #1a1a1a !important;
                font-family: 'Roboto Condensed', sans-serif;
            }

                .login_div > a:hover, .login_div > a:focus, .login_div > a:active {
                    color: #323232 !important;
                    font-family: 'Roboto Condensed', sans-serif;
                }

        .login_div > input {
            border-radius: 50px;

        }

            .login_div > input:active, .login_div > input:focus {
                outline-color: #323232;
                border-color: #323232;
            }
    </style>
</head>
<body class="page-login-v2 layout-full page-dark">
    <div class="login_div">
        <input name="userName" class="form-control" type="text" />
        <br />
        <input name="passWord" class="form-control" type="password" />
        <br />
        <a>Forgot Password?</a>

        @using (Html.BeginForm("GotoDashBoard", "AmazingRace")) {
            <button type = "submit" class="btn-block login_btn">Login</button>
        }
       
    </div>

