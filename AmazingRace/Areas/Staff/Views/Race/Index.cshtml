@model IEnumerable<AmazingRace.Models.Events>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}

<head>

    <style>
        .page {
            height: 80%;
            width: 60%;
            margin-left: 50px;
        }

        h1 {
            font-family: 'Roboto Condensed', sans-serif;
            color: #333;
            text-align: center;
        }

        hr {
            padding-top: 25px;
            border-bottom: 1px solid #333;
            margin-right: 0px !important;
        }

        th {
            border-top: 0px !important;
        }

        .btn {
            height: 40px;
            width: 40px;
            position: relative;
            float: right;
            right: 50px;
            top: -25px;
            color: #333;
            background-color: #ffcc00;
            font-size: 25px;
            text-align: center;
            border-radius: 100%;
            border: 2px solid #333;
        }

            .btn > i {
                position: absolute;
                top: 30%;
                left: 50%;
                height: 50%;
                transform: translate(-50%, -50%);
            }

            .btn:focus, .btn:active {
                outline: none;
            }

        .container {
            text-align: center;
        }

        th {
            text-align: center;
        }
    </style>

</head>

<body>
    <div class="container">
        <h1>Race</h1>
        <hr />

        <table class="table">
            <tr>
                <th>
                    Event Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    City
                </th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.ActionLink("View Simulatio of the events", "Simulation")
                            @*@*<a class="delete" href="~/Areas/Staff/Events/Delete/@item.EventId">Delete</a>*@
                            @*<a href="#" class="deleteLink" id="@item.EventId">Delete</a>*@
                        </td>
                    </tr>

                }
            }
        </table>
    </div>
</body>



