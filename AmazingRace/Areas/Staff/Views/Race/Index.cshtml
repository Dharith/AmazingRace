@model IEnumerable<AmazingRace.Models.Events>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}

<head>

    <style>
        .page {
            height: 80%;
            width: 70%;
            margin-left: 50px;
        }

        h1 {
            font-family: 'Roboto Condensed', sans-serif;
            color: #333;
            text-align: center;
        }

        hr {
            padding-top: 25px;
            border-bottom: 1px solid #333;
            margin-right: 0px !important;
        }

        th {
            border-top: 0px !important;
        }

        .btn {
            height: 40px;
            width: 40px;
            position: relative;
            float: right;
            right: 50px;
            top: -25px;
            color: #333;
            background-color: #ffcc00;
            font-size: 25px;
            text-align: center;
            border-radius: 100%;
            border: 2px solid #333;
        }

            .btn > i {
                position: absolute;
                top: 30%;
                left: 50%;
                height: 50%;
                transform: translate(-50%, -50%);
            }

            .btn:focus, .btn:active {
                outline: none;
            }

        .container {
            text-align: center;
        }

        th {
            text-align: center;
            border: 2px solid #333;
            border-top: 2px solid #333 !important;
            background-color: #ffcc00;
        }

        table {
            width: 500px;
            table-layout: auto;
            border: none;
        }

        td {
            border: 2px solid #333;
        }

            td > a {
                color: #333;
                font-weight: bold;
                text-decoration: underline;
            }

                td > a:hover, td > a:active, td > a:focus {
                    color: #333;
                }
    </style>

</head>

<body>
    <div class="container">
        <h1>Race</h1>


        <table class="table" style="margin-top:50px">
            <tr>
                <th>
                    Event Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    City
                </th>
                <th>
                    Action
                </th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            <a href="~/Staff/Race/Simulation/@item.EventName">View PitStops</a>
                        </td>
                    </tr>

                }
            }
        </table>
    </div>
</body>



