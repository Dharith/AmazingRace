@model IEnumerable<AmazingRace.Models.Events>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}


<head>

    <style>
        .page {
            height:80%;
            width:70%;
            margin-left:50px;
        }
        h1 {
            font-family: 'Roboto Condensed', sans-serif;
            color: #333;
            text-align: center;
        }

        hr {
            padding-top:25px;
            border-bottom: 1px solid #333;
            margin-right:0px !important;
            
        }

        th {
            border-top: 0px !important;
        }

        .btn {
            height:40px;
            width:100px;
            position:relative;
            float: right;
            right:50px;
            top:-25px;
            color: #333;
            background-color: #ffcc00;
            font-size:15px;
            text-align:center;
            border-radius:25px;
            border: 2px solid #333;
           font-weight:bold;
        }
          

        .btn:focus, .btn:active {
            outline: none;
        }
        .container {
            text-align:center;
        }

        th {
            text-align: center;
            border: 2px solid #333;
            border-top: 2px solid #333 !important;
            background-color:#ffcc00;
        }

        table {
            
            width:500px;
            table-layout:auto;
            
            border:none;
        }

        td {
            border:2px solid #333;
        }
        td > a{
            color:#333;
            font-weight:bold;
            text-decoration:underline;
        }

            td > a:hover,td > a:active,td > a:focus {
                color: #333;
            }


    </style>

</head>

<body>
    <div class="container">
        <h1>Events</h1>
        @using (Html.BeginForm("Create", "Events", FormMethod.Get))
    {
        <button type="submit" class="btn"><i class="ion-android-add"></i></button>
}


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>Action</th>
            </tr>
            @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EventId })|
                        <a href="#" class="deleteLink" id="@item.EventId"></a>
                        @Html.ActionLink("Delete", "Delete", new { id = item.EventId })
                        @*@*<a class="delete" href="~/Areas/Staff/Events/Delete/@item.EventId">Delete</a>*@
                        @*<a href="#" class="deleteLink" id="@item.EventId">Delete</a>*@
                    </td>
                </tr>

        }
    }
        </table>
    </div>
</body>


