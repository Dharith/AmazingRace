@model AmazingRace.Models.Models.Events

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page animsition">
        <div class="page-header">
            <h1 class="page-title">Events</h1>
            <ol class="breadcrumb">
                <li><a href="../index.html">Home</a></li>
                <li class="active">Event Details</li>
            </ol>

        </div>

        <div class="page-content">
            <div class="panel">
                <div class="panel-body container-fluid">
                    <div class="row row-lg">
                        <div class="col-sm-12 ">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.EventId)

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.EventName)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.Date)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.StartTime)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.City)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div>
                                <a href="~/Staff/Pitstop/Index/@Model.EventName">View PitStops of the Event</a>
                            </div>
                            <div class="form-group">
                                <div class="form-group col-sm-5">
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <a href="~/Staff/Events/Edit/@Model.EventId" type="button" class="btn btn-success"><i class="icon-save"></i> Edit</a>
                                        <a href="~/Staff/Pitstop/Create/@Model.EventName" type="button" class="btn btn-success"><i class="icon-save"></i> Add PitStops</a>
                                        <a href="~/Staff/Events/Index" id="cancel"> Back to List</a>
                                    </div>
                                </div>
                                <div class="form-group col-sm-5">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
