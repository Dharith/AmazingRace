@model AmazingRace.Models.Events

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}

<head>
    <style>
        .page {
            height: 80%;
            width: 70%;
            margin-left: 50px;
        }

        h1 {
            font-family: 'Roboto Condensed', sans-serif;
            color: #333;
            text-align: center;
            margin-bottom: 100px;
        }

        .row {
            margin: 25px;
            font-size: 20px;
        }

        .heading {
            font-weight: bold;
        }

        .container {
            text-align: center;
        }

        .btn {
            width: 150px;
        }

        .save {
            position: relative;
            background-color: #ffcc00;
            color: #333;
            border-radius: 50px;
        }

            .save:active, .save:focus {
                outline: none;
                border: 0px;
            }

        .cancel {
            background-color: #333;
            color: #ffcc00;
            border-radius: 50px;
        }

            .cancel:active, .cancel:focus, .cancel:hover {
                color: #ffcc00;
                outline: none;
                border: 0px;
            }
    </style>
</head>


<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">

            <h1>Event - Details</h1>

            <div class="row">
                <div class="col-xs-6 heading"> @Html.DisplayNameFor(model => model.EventName)</div>
                <div class="col-xs-6">@Html.DisplayFor(model => model.EventName)</div>
            </div>
            <div class="row">
                <div class="col-xs-6 heading"> @Html.DisplayNameFor(model => model.Date)</div>
                <div class="col-xs-6">@Html.DisplayFor(model => model.Date)</div>
            </div>
            <div class="row">
                <div class="col-xs-6 heading"> @Html.DisplayNameFor(model => model.StartTime)</div>
                <div class="col-xs-6">@Html.DisplayFor(model => model.StartTime)</div>
            </div>
            <div class="row">
                <div class="col-xs-6 heading"> @Html.DisplayNameFor(model => model.City)</div>
                <div class="col-xs-6">@Html.DisplayFor(model => model.City)</div>
            </div>
            <div class="form-group row" style="padding-top:50px;">
                <div class="col-xs-4">
                    <a href="~/Staff/Events/Edit/@Model.EventId" type="button" class="btn save"><i class="icon-save"></i> Edit</a>
                </div>
                <div class="col-xs-4">
                    <a href="~/Staff/Pitstop/Create/@Model.EventName" type="button" class="btn save"><i class="icon-save"></i> Add PitStops</a>
                </div>
                <div class="col-xs-4">
                    <a href="~/Staff/Events/Index" class="btn cancel" id="cancel"> Back to List</a>
                </div>
                

            </div>

        </div>
    }

