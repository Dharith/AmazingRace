@model IEnumerable<AmazingRace.Models.PitStops>

@{
    ViewBag.Title = "Race";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}

<head>


    <style>
        .page {
            height: 80%;
            width: 70%;
            margin-left: 50px;
        }

        h1 {
            font-family: 'Roboto Condensed', sans-serif;
            color: #333;
            text-align: center;
        }

        hr {
            padding-top: 25px;
            border-bottom: 1px solid #333;
            margin-right: 0px !important;
        }

        th {
            border-top: 0px !important;
        }

        .btn {
            height: 40px;
            width: 120px;
            position: relative;
            float: right;
            right: 50px;
            top: -25px;
            color: #333;
            background-color: #ffcc00;
            font-size: 15px;
            font-weight:bold;
            text-align: center;
            border-radius: 25px;
            border: 2px solid #333;
        }

            .btn > i {
                position: absolute;
                top: 30%;
                left: 50%;
                height: 50%;
                transform: translate(-50%, -50%);
            }

            .btn:focus, .btn:active {
                outline: none;
            }

        .container {
            text-align: center;
        }

        th {
            text-align: center;
            border: 2px solid #333;
            border-top: 2px solid #333 !important;
            background-color: #ffcc00;
        }

        table {
            width: 500px;
            table-layout: auto;
            border: none;
        }

        td {
            border: 2px solid #333;
        }

            td > a {
                color: #333;
                font-weight: bold;
                text-decoration: underline;
            }

                td > a:hover, td > a:active, td > a:focus {
                    color: #333;
                }
    </style>

</head>

<body>
    <div class="container">
        <h1>Pitstops</h1>
        @*@using (Html.BeginForm("Create", "PitStop", FormMethod.Post)
        {
            <button type="submit" class="btn"><i class="ion-android-add"></i></button>
        }*@


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PitStopId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>Action</th>
            </tr>
            @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PitStopId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PitStopId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PitStopId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PitStopId })
                </td>
            </tr>

}
}
        </table>
        <div class="col-xs-2">
            <a href="~/Staff/Events/Index">Back to Events</a>
        </div>
    </div>
</body>
