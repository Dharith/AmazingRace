@model AmazingRace.Models.Teams

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Staff/Views/Shared/LayoutDashboard.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page animsition">
        <div class="page-header">
            <h1 class="page-title">Teams</h1>
            <ol class="breadcrumb">
                <li><a href="../index.html">Home</a></li>
                <li class="active">Team Details</li>
            </ol>

        </div>

        <div class="page-content">
            <div class="panel">
                <div class="panel-body container-fluid">
                    <div class="row row-lg">
                        <div class="col-sm-12 ">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.TeamName)

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.TeamName)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.TeamName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.Photo)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.SelectedEvent)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.SelectedEvent, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-group col-sm-5">
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <a href="~/Staff/Team/Edit/@Model.TeamName" type="button" class="btn btn-success"><i class="icon-save"></i> Edit</a>
                                        <a href="~/Staff/Team/Index" id="cancel"> Back to List</a>
                                    </div>
                                </div>
                                <div class="form-group col-sm-5">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
